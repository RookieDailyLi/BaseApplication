<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_empty" />


    <TextView
        android:id="@+id/tv_empty_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/empty_data_msg"
        android:textColor="@color/empty_prompt_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_empty_again"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:text="@string/click_refresh"
        android:textColor="@color/empty_data_btn_color"
        android:textSize="14sp" />
</LinearLayout>