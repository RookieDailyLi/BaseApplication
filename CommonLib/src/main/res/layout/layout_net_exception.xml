<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_error_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_no_network" />

    <TextView
        android:id="@+id/tv_net_exception_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/net_resp_prompt"
        android:textColor="@color/net_prompt_color"
        android:textSize="@dimen/text_size_15" />


    <TextView
        android:id="@+id/btn_net_exception_again"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@null"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:text="@string/net_resp_btn_refresh"
        android:textColor="@color/net_resp_btn_color"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>